<com.example.obligatorio.ui.DashboardLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:background="#ffffff" >

    <Button
        android:id="@+id/btn_create_list"
        style="@style/DashboardButton"
        android:background="@drawable/button_crear_lista"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="4dp"
        android:text="Crear Lista" />

    <Button
        android:id="@+id/btn_check_list"
        style="@style/DashboardButton"
        android:background="@drawable/button_check_list"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="4dp"
        android:text="Última Lista" />

    <Button
        android:id="@+id/btn_map"
        style="@style/DashboardButton"
        android:background="@drawable/button_map"
        android:drawablePadding="2dp"
        android:gravity="bottom|center_horizontal"
        android:minHeight="38dip"
        android:text="Dirección" />

    <Button
        android:id="@+id/btn_store"
        style="@style/DashboardButton"
        android:background="@drawable/button_store"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="4dp"
        android:text="Establecimiento" />

    <Button
        android:id="@+id/btn_history"
        style="@style/DashboardButton"
        android:background="@drawable/button_history"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="4dp"
        android:text="Historial" />

    <Button
        android:id="@+id/btn_history2"
        style="@style/DashboardButton"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="4dp"
        android:text="" />

</com.example.obligatorio.ui.DashboardLayout>